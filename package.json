{
  "name": "Spite-Malice-Server",
  "version": "1.0.0",
  "description": "Backend server responsible for handling Turns and coordinating players",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taffyb/Spite-Malice-Server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/taffyb/Spite-Malice-Server/issues"
  },
  "homepage": "https://github.com/taffyb/Spite-Malice-Server#readme",
  "dependencies": {
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "neo4j-driver": "^1.7.6",
    "path": "^0.12.7",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/dotenv": "^6.1.1",
    "@types/es6-promise": "^3.3.0",
    "@types/express": "^4.17.1",
    "@types/fs-extra": "^8.0.0",
    "@types/mocha": "^5.2.7",
    "@types/morgan": "^1.7.37",
    "@types/shelljs": "^0.8.5",
    "@types/uuid": "^3.4.5",
    "chai": "^4.2.0",
    "fs-extra": "^8.1.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.5",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
